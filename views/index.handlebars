<div class="container mt-5">
    <h1 class="text-center">Eat The Burger!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burgers}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <h4 class="text-center">Add a burger!</h4>
    <form class="create-form text-center">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>